
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-3 text-center">Burger Time</h1>
        <p class="lead">Are you hungry? Because it's burger devouring time!</p>
        <hr class="my-2">
        <p>To add a burger please type in a burger name and click submit. Click "devour it!" to have it show up in the devour section</p>
    </div>
</div>
<div class="container">
<div class="bg-warning text-dark text-center text-white">
<h4>Burgers that are not Devoured!</h4>

<ul class="mb-1">
    
  {{#each burgers}}
    {{#unless devoured}}
    <div> <p>{{this.id}}. {{this.burger_name}}</p>
     <form action="api/burgers/{{this.id}}" method="get">
    <button type="submit">devour it!</button>
    </form>
    </div>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="text-center bg-danger text-white mt-0">
<h4>Burgers that are Devoured!</h4>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <p>{{this.id}} {{this.burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class=" bg-warning py-3">
<h4>Add a Burger</h4>
<form class="" method="post" action="/api/burgers">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" class="form-control" placeholder="Burger name" id="burger" name="name">
  </div>
  
  <button type="submit" class="btn bg-danger text-white">Add Burger</button>
  </div>
</form>
</div>